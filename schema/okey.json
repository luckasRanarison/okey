{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Config",
  "type": "object",
  "required": ["keyboards"],
  "additionalProperties": false,
  "properties": {
    "defaults": {
      "type": "object",
      "description": "Shared global settings",
      "properties": {
        "tap_dance": {
          "type": "object",
          "properties": {
            "default_timeout": {
              "type": "integer",
              "description": "Fallback tap dance timeout"
            }
          },
          "additionalProperties": false
        },
        "combo": {
          "type": "object",
          "properties": {
            "default_threshold": {
              "type": "integer",
              "description": "Delay for inserting unicode codepoints with macro"
            }
          },
          "additionalProperties": false
        },
        "general": {
          "type": "object",
          "properties": {
            "event_poll_timeout": {
              "type": "integer",
              "description": "Main event loop interval"
            },
            "deferred_key_delay": {
              "type": "integer",
              "description": "Delay for keys following non-acknowledged special keys"
            },
            "unicode_input_delay": {
              "type": "integer",
              "description": "Delay for inserting unicode codepoints with macro"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "keyboards": {
      "type": "array",
      "description": "Per keyboard configuration",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the keyboard as an input device"
          },
          "keys": {
            "description": "Key mappings for the main layer",
            "type": "object",
            "additionalProperties": {
              "$ref": "#/$defs/KeyAction"
            }
          },
          "combos": {
            "type": "array",
            "description": "List of combo mappings",
            "items": { "$ref": "#/$defs/ComboDefinition" }
          },
          "tap_dances": {
            "type": "object",
            "description": "Dual function keys on tap/hold",
            "additionalProperties": {
              "$ref": "#/$defs/TapDanceConfig"
            }
          },
          "layers": {
            "type": "object",
            "description": "Virtual layers (shift-like)",
            "additionalProperties": {
              "$ref": "#/$defs/LayerDefinition"
            }
          }
        },
        "required": ["name"],
        "additionalProperties": false
      }
    }
  },
  "$defs": {
    "ComboDefinition": {
      "type": "object",
      "properties": {
        "keys": {
          "type": "array",
          "items": { "type": "string" }
        },
        "action": { "$ref": "#/$defs/KeyAction" }
      },
      "required": ["keys", "action"],
      "additionalProperties": false
    },
    "TapDanceConfig": {
      "type": "object",
      "properties": {
        "timeout": { "type": "integer" },
        "tap": { "$ref": "#/$defs/KeyAction" },
        "hold": { "$ref": "#/$defs/KeyAction" }
      },
      "required": ["tap", "hold"],
      "additionalProperties": false
    },
    "LayerDefinition": {
      "type": "object",
      "properties": {
        "modifier": {
          "$ref": "#/$defs/LayerModifierConfig",
          "description": "Layer activation and behavior"
        },
        "keys": {
          "type": "object",
          "description": "Key mappings for the current layer",
          "additionalProperties": { "$ref": "#/$defs/KeyAction" }
        }
      },
      "required": ["modifier", "keys"],
      "additionalProperties": false
    },
    "LayerModifierConfig": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "object",
          "properties": {
            "key": { "type": "string", "description": "Layer activation key" },
            "type": {
              "type": "string",
              "description": "Layer activation behavior",
              "enum": ["momentary", "toggle", "oneshoot"]
            }
          },
          "required": ["key"],
          "additionalProperties": false
        }
      ]
    },
    "KeyAction": { "$ref": "#/$defs/Macro" },
    "Macro": {
      "oneOf": [
        { "$ref": "#/$defs/EventMacro" },
        {
          "type": "array",
          "items": { "$ref": "#/$defs/EventMacro" }
        }
      ]
    },
    "EventMacro": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "object",
          "oneOf": [
            {
              "type": "object",
              "required": ["press"],
              "properties": {
                "press": {
                  "type": "string",
                  "description": "Keycode press event"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "required": ["hold"],
              "properties": {
                "hold": {
                  "type": "string",
                  "description": "Keycode hold event"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "required": ["release"],
              "properties": {
                "release": {
                  "type": "string",
                  "description": "Keycode release event"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "required": ["delay"],
              "properties": {
                "delay": {
                  "type": "integer",
                  "description": "Wait a given delay in milliseconds"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "required": ["string"],
              "properties": {
                "string": { "type": "string", "description": "ASCII string" }
              },
              "additionalProperties": false
            },
            {
              "required": ["env"],
              "properties": {
                "env": {
                  "type": "string",
                  "description": "Environment variable name"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "required": ["unicode"],
              "properties": {
                "unicode": {
                  "type": "string",
                  "description": "Unicode characters"
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "required": ["shell"],
              "properties": {
                "shell": {
                  "type": "string",
                  "description": "Bash shell command"
                },
                "trim": {
                  "type": "boolean",
                  "description": "Whether to trim trailing whitespaces or not"
                }
              },
              "additionalProperties": false
            }
          ]
        }
      ]
    }
  }
}
